# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                    controllers.Application.index
GET     /shelf               controllers.Application.getAllShelf
GET     /shelf/*id           controllers.Application.getShelfDetail(id: Long)
DELETE  /shelf/*id           controllers.Application.deleteBookShelf(id: Long)
GET     /books               controllers.Application.getBooksInShelf
GET     /books/*id           controllers.Application.getBookDetail(id: Long)
POST    /shelf               controllers.Application.makeShelf
POST    /book                controllers.Application.makeBookInShelf
POST    /connect             controllers.Application.connect
GET     /disconnect          controllers.Application.disconnect

# Get and update rental infomations
GET     /rental              controllers.Application.getRentalInfos
GET     /rental/*id          controllers.Application.getRentalDetails
POST    /rental              controllers.Application.doRental(id :Long)
PUT     /rental/*id          controllers.APplication.updateRental(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /*file               controllers.Assets.at(path="/public", file)
