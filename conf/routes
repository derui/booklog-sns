# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                        application.Application.index
GET     /shelf                   application.Application.getAllShelf
GET     /shelf/*id               application.Application.getShelfDetail(id: Long)
DELETE  /shelf/*id               application.Application.deleteBookShelf(id: Long)
GET     /books                   application.Application.getBooksInShelf
GET     /books/*id               application.Application.getBookDetail(id: Long)
POST    /shelf                   application.Application.makeShelf
POST    /book                    application.Application.makeBookInShelf
POST    /connect                 application.Application.connect
GET     /disconnect              application.Application.disconnect
GET     /book_shelf/register     application.Application.registerBookShelf
GET     /book_shelf/detail/*id   application.Application.showBookShelf(id: Long)
GET     /book/register           application.Application.registerBook

# Get and update rental infomations
GET     /rental              application.Rental.getRentalInfos
GET     /rental/*id          application.Rental.getRentalDetails(id: Long)
POST    /rental              application.Rental.doRental
PUT     /rental/*id          application.Rental.returnRentalBook(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /*file               controllers.Assets.at(path="/public", file)
