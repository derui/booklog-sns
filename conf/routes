# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page and getting views.
GET     /                        application.Application.index
GET     /book_shelf/register     application.Application.registerBookShelf
GET     /book_shelf/detail/*id   application.Application.showBookShelf(id: Long)
GET     /book/register           application.Application.registerBook
GET     /book/detail/*id         application.Application.showBook(id: Long)

# API endpoints
GET     /api/shelf               application.Application.getAllShelf
GET     /api/shelf/*id           application.Application.getShelfDetail(id: Long)
DELETE  /api/shelf/*id           application.Application.deleteBookShelf(id: Long)
GET     /api/book                application.Application.getBooksInShelf
GET     /api/book/*id            application.Application.getBookDetail(id: Long)
POST    /api/shelf               application.Application.makeShelf
POST    /api/book                application.Application.makeBookInShelf
POST    /api/connect             application.Application.connect
GET     /api/disconnect          application.Application.disconnect
POST    /api/logout              application.Application.logout
GET     /api/login_user_info          application.Application.getLoginUserInfo
PUT     /api/login_user_info          application.Application.updateUserInfo

# Get and update rental information
GET     /api/rental              application.Rental.getRentalInformAll
GET     /api/rental/             application.Rental.getRentalInfoByBookId
GET     /api/rental/*id          application.Rental.getRentalDetails(id: Long)
POST    /api/rental              application.Rental.doRental
DELETE     /api/rental/*id          application.Rental.returnRentalBook(id:Long)
GET     /api/rental_history/     application.Rental.getRentalHistory

# Get book infomations from Amazon Advertise API
GET     /api/amazon_search/*keyword       application.AWSRequest.searchBy(keyword:String)
POST     /api/amazon_barcode              application.AWSRequest.searchByBarcode

# Detect current environment on running Play.
GET     /api/detect_env         application.Application.detectCurrentEnvironment

# Map static resources from the /public folder to the /assets URL path
GET     /*file               controllers.Assets.at(path="/public", file)
